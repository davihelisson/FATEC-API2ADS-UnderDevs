<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:3.1.0:exec</goal>
        </goals>
        <properties>
            <exec.vmArgs>-Xms256m -Xmx1024m</exec.vmArgs>
            <exec.args>-classpath %classpath ${exec.mainClass}</exec.args>
            <exec.mainClass>application.ApiInterface</exec.mainClass>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:3.1.0:exec</goal>
        </goals>
        <properties>
            <exec.vmArgs>-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5005</exec.vmArgs>
            <exec.args>-classpath %classpath ${exec.mainClass}</exec.args>
            <exec.mainClass>application.ApiInterface</exec.mainClass>
            <exec.executable>java</exec.executable>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:3.1.0:exec</goal>
        </goals>
        <properties>
            <exec.vmArgs>-agentpath:/path/to/your/profiler</exec.vmArgs>
            <exec.args>-classpath %classpath ${exec.mainClass}</exec.args>
            <exec.mainClass>application.ApiInterface</exec.mainClass>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
</actions>